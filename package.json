{
  "name": "standup-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npx next dev -p 3050",
    "dev2": "npx next dev -p 3051",
    "build": "NODE_ENV=production npx next build",
    "postbuild": "NODE_ENV=production npx next-sitemap",
    "start": "npx next start",
    "test": "jest --watch"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.22",
    "@tailwindcss/forms": "^0.3.3",
    "axios": "^0.21.1",
    "devtoolbar-react": "^1.0.43",
    "diff": "^5.0.0",
    "dotenv-flow": "^3.2.0",
    "gray-matter": "^4.0.2",
    "js-base64": "^3.6.1",
    "js-cookie": "^2.2.1",
    "mdx-prism": "^0.3.1",
    "next": "10.0.5",
    "next-cookies": "^2.0.3",
    "next-mdx-remote": "^3.0.2",
    "next-seo": "^4.17.0",
    "next-sitemap": "^1.4.5",
    "next-themes": "^0.0.10",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-flip-toolkit": "^7.0.13",
    "react-markdown": "^6.0.2",
    "react-query": "^3.16.1",
    "react-uid": "^2.3.1",
    "react-use-clipboard": "^1.0.7",
    "rehype": "^11.0.0",
    "rehype-raw": "^5.1.0",
    "rehype-sanitize": "^4.0.0",
    "rehype-shiki": "0.0.9",
    "remark": "^13.0.0",
    "remark-autolink-headings": "^6.0.1",
    "remark-code-titles": "^0.1.1",
    "remark-deflist": "^0.3.0",
    "remark-external-links": "^8.0.0",
    "remark-slug": "^6.0.0",
    "sass": "^1.35.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.12.12",
    "@tailwindcss/typography": "^0.4.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@types/mdx-js__react": "^1.5.3",
    "@types/node": "^14.14.21",
    "@types/react": "^17.0.0",
    "babel-jest": "^26.6.3",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "next-compose-plugins": "^2.2.1",
    "postcss": "^8.2.4",
    "postcss-nested": "^5.0.3",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "tailwindcss": "^2.0.2",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,md,mdx,js}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "overrides": [
      {
        "files": "articles/*.mdx",
        "options": {
          "printWidth": 50
        }
      }
    ]
  }
}
